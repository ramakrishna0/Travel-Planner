<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:fontFamily">@font/abhaya_libre_bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SubTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/edit_sub_text_color</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>